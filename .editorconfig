# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js, py, rs, toml}]
charset = utf-8

[*.{py,rs}]
indent_style = space
indent_size = 4

[{Makefile,*.sh}]
indent_style = tab
indent_size = 1

[*.{json, yml, toml,ron}]
indent_style = space
indent_size = 2

